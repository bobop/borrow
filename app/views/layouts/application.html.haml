%head
  %meta{charset: "utf-8"}

  / Set the viewport width to device width for mobile
  %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}

  %title= content_for?(:title) ? yield(:title) : "Borrow Note - Reminders to return your stuff"

  / Included CSS Files
  = stylesheet_link_tag "application"

  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tags
%body
  #container.row.centered
    #header.small-12.columns
      %h1.light
        borrow<sub>note</sub>
      %h2.light
        %small friendly reminders to give your stuff back!
    %hr
    #content.small-12.columns
      = render 'layouts/flashes'
      = yield
    %hr
    #footer.row
      .small-1.columns
        &copy;
        = Time.now.year
      .small-4.small-offset-7.columns.right
        = link_to "built by bobop", 'http://bobop.co.uk'
  
  / Included JS Files
  = javascript_include_tag "application"

